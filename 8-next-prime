public Integer nextPrime(Integer num) {
    if(num == 2){
            return num;
    }    
When(true){
        num++;  // Check the next number
        
        Boolean isPrime = true;
        for (Integer i = 2; i < num; i++) {
            if (Math.mod(num, i) == 0) {
                isPrime = false;
                break;
            }
        }
        
        // If prime, return num
        if (isPrime) {
            return num;
        }
    }
}
