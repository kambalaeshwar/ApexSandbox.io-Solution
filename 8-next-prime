public Integer nextPrime(Integer num) {
    Integer candidate = num + 1;
        if (candidate < 2) {
            return 2;
    }
    return checkPrime(candidate);
}
    
private Integer checkPrime(Integer n) {
        // Check if n is prime
        Boolean isPrime = true;
        for (Integer i = 2; i < n; i++) {
            if (Math.mod(n, i) == 0) {
                isPrime = false;
                break;
            }
        }
        
        // If prime, return it
        if (isPrime) {
            return n;
        }
        // Otherwise, try the next number (recursion)
        return checkPrime(n + 1);
}